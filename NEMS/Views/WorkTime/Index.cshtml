@model IEnumerable<TimeTable>;
@{
}
<h1>Work Time Summary</h1>
<div class="container">
    <div class="align-items-start">
        <div class="row">
            <div class="col-3">
                <form method="GET" asp-controller="WorkTime" asp-action="Index">
                    <select class="form-control my-2">
                        @foreach(var user in Model)
                        {
                            <option>user</option>
                        }
                    </select>
                    <input class="form-control my-2" type="date" />
                    <input class="form-control my-2" type="date" />
                </form>

            </div>
            <div class="col-9">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Clock in</th>
                            <th scope="col">Clock in (Rounded)</th>
                            <th scope="col">Clock out</th>
                            <th scope="col">Clock out (Rounded)</th>
                            <th scope="col">Work Time</th>
                            <th scope="col">Over Time</th>
                            <th scope="col">Early Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th>1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>mdo</td>
                            <td>mdo</td>
                            <td>mdo</td>
                            <td>mdo</td>
                            <td>mdo</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>