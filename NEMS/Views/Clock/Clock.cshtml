
@{
    ViewData["Title"] = "Clock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clock</h1>
<div class="container">
    <div class="row align-items-start">
        <div class="col">
            <div class="m-2">
                <button class="btn btn-primary btn-lg">Clock In</button>
            </div>
            <div class="m-2">
                <button class="btn btn-secondary btn-lg">Clock Out</button>
            </div>
        </div>
        <div class="col">
            <div id="clock">
                <h1 id="date-time"></h1>

            </div>
        </div>
    </div>
</div>

<script src="~/js/clock.js" type="text/javascript"></script>